    <!-- Humidity -->
	<LinearLayout 
		android:orientation="horizontal"
		android:paddingTop="10dp"
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
		<TextView 
			android:layout_width="30dp"
            android:layout_height="wrap_content"
